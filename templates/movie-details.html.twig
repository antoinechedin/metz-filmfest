{% extends "layout.html.twig" %}

{% block nav %}
    <nav role="navigation" class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand py-1" href="{{ path("admin") }}" tabindex="1">
            <img src="{{ asset("svg/ffem.svg") }}" height="32" class="mr-3"/>ADMINISTRATION
        </a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <span class="navbar-brand">{{ user.email }}</span>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-danger" href="{{ path("logout") }}">Déconnexion</a>
            </li>
        </ul>
    </nav>
{% endblock %}


{% block message %}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                Dashboard <span class="sr-only">(current)</span>
                            </a>
                        </li>
                    </ul>

                    {#<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Saved reports</span>
                        <a class="d-flex align-items-center text-muted" href="#">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>#}
                </div>
            </nav>

            <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <div class=" container-fluid">
                        <h3 class="text-muted">{{ movie.title }} ({{ movie.completionDate|date("Y") }})</h3>
                        <h6 class="text-muted mb-3">{{ movie.duration }} min |
                            {% for category in movie.categories %}
                                <span class="badge badge-secondary">{{ category.name }}</span>
                            {% endfor %}
                        </h6>
                        <p>{{ movie.synopsis }}</p>
                        <ul>
                            <li>
                                <strong>Réalisateur :</strong> {{ movie.director.firstname }} {{ movie.director.name }}
                                | {{ movie.director.personalInformation.birthDate|date("d/m/Y") }}
                            </li>
                            <li>
                                <strong>Études : </strong> {{ movie.director.personalInformation.studyPlace }}
                                ({{ movie.director.personalInformation.studyYear }})
                            </li>
                            {% if movie.actor != null %}
                                <li><strong>Acteur nominé : </strong> {{ movie.actor.firstname }} {{ movie.actor.name }}
                                </li>
                            {% else %}
                                <li><strong>Pas d'acteur nominé</strong></li>
                            {% endif %}
                        </ul>
                        <p><a href="{{ movie.link }}">{{ movie.link }}</a></p>
                        {% if movie.additionalInformation != null %}
                            <p>{{ movie.additionalInformation }}</p>
                        {% else %}
                            <p class="text-muted"><em>Pas d'informations supplémentaires</em></p>
                        {% endif %}

                        <p class="text-center">
                            <a href="#" class="btn btn-success mx-2" role="button">Accepter</a>
                            <a href="#" class="btn btn-danger mx-2    " role="button">Refuser</a>
                        </p>

                        <div class="card my-3 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-text border-bottom">Discussion</h6>
                                <ul class="list-unstyled mb-0">
                                {% for comment in movie.comments %}
                                    <li class="media card-text">
                                        <p class="media-body small mb-2">
                                            <strong class="d-block">{{ comment.user.firstName }} {{ comment.user.name }}</strong>
                                            {{ comment.message }}
                                        </p>
                                        {% if comment.user.id == user.id %}
                                            <a href="{{ path("deleteComment", {"movieId": movie.id, "commentId": comment.id}) }}" class="p-1 ml-2 align-self-center">
                                                <span class="oi oi-trash text-muted" title="supprimer" aria-hidden="true"></span>
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endfor %}

                                {{ form_start(commentForm) }}
                                <div class="form-row mt-4">
                                    <div class="form-group mb-2 col">
                                        {{ form_widget(commentForm.message) }}
                                    </div>
                                    <div class="form-group mb-2 col-auto">
                                        {{ form_widget(commentForm.submit) }}
                                    </div>
                                </div>
                                {{ form_end(commentForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}{% endblock %}
{% extends "admin/adminLayout.html.twig" %}

{% block main %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Films</h1>
            {#<div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <button class="btn btn-sm btn-outline-secondary">Share</button>
                    <button class="btn btn-sm btn-outline-secondary">Export</button>
                </div>
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                    <span data-feather="calendar"></span>
                    This week
                </button>
            </div>#}
        </div>

        <div class="card border-primary mb-4">
            <h5 class="card-header text-primary">Courts-métrages inscrits</h5>
            <div class="card-body p-1">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Réalisateur</th>
                            <th>Genre</th>
                            <th>Lien</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for movie in movies %}
                            <tr>
                                <td>{{ movie.id }}</td>
                                <td><a href="{{ path("movieDetails", {"movieId": movie.id}) }}">{{ movie.title }}</a>
                                </td>
                                <td>{{ movie.director.firstName }} {{ movie.director.name }}</td>
                                <td>{% for category in movie.categories %}
                                        <span class="badge badge-secondary">{{ category.name }}</span>
                                    {% endfor %}</td>
                                <td><a href="{{ movie.link }}">{{ movie.link }}</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card border-success mb-4">
            <h5 class="card-header text-success">Courts-métrages sélectionnés</h5>
            <div class="card-body">
            </div>
        </div>

        <div class="card border-danger mb-4">
            <h5 class="card-header text-danger">Courts-métrages éliminés</h5>
            <div class="card-body">
            </div>
        </div>
    </main>
{% endblock %}